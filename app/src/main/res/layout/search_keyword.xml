<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchAdd"
        android:id="@+id/searchAdd"
        android:layout_below="@+id/searchword"
        android:layout_alignRight="@+id/searchword"
        android:layout_alignEnd="@+id/searchword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchCancel"
        android:id="@+id/searchCancel"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>