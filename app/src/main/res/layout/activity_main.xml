<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ir.rima.mohandesi.app.MainActivity"
    android:background="#3f9dd9">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ListButton"
        android:text="@string/list"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:onClick="ListClick"
        android:layout_below="@+id/imageView"
        style="@style/btnStyleBeige"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SearchButton"
        android:text="@string/search"
        android:layout_below="@+id/ListButton"
        android:layout_centerHorizontal="true"
        android:onClick="SearchClick"
        android:layout_marginTop="10dp"
        style="@style/btnStyleBeige"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SelectButton"
        android:text="@string/select"
        android:layout_below="@+id/SearchButton"
        android:layout_centerHorizontal="true"
        android:onClick="SelectClick"
        android:layout_marginTop="10dp"
        style="@style/btnStyleBeige"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SourceButton"
        android:text="@string/source"
        android:layout_below="@+id/SelectButton"
        android:layout_centerHorizontal="true"
        android:onClick="SourceClick"
        android:layout_marginTop="10dp"
        style="@style/btnStyleBeige" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">


    </RelativeLayout>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/AboutButton"
        android:onClick="AboutClick"
        android:background="@drawable/about"
        android:layout_alignParentBottom="true"
        android:text="@string/about"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignRight="@+id/SourceButton" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/ContactButton"
        android:onClick="ContactClick"
        android:text="@string/contact"
        android:background="@drawable/contact"
        android:src="@drawable/contact"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/SourceButton" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
