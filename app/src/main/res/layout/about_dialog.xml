<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo_rima"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_rima"
        android:layout_alignRight="@+id/txt_dialog"
        android:layout_below="@+id/txt_dialog"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="میتوانید قوانین نظام مهندسی را با این برنامه همیشه همراه خود داشته باشید"
        android:id="@+id/txt_dialog"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo_azad"
        android:src="@drawable/logo_azad"
        android:layout_below="@+id/txt_dialog"
        android:layout_alignLeft="@+id/txt_dialog"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="دانشگاه آزاد مهدی‌شهر"
        android:layout_below="@+id/logo_azad"
        android:gravity="center"
        android:layout_alignLeft="@+id/logo_azad" />


    <View
        android:layout_width="5dp"
        android:layout_height="300dp"
        android:background="#fff"
        android:id="@+id/line" />
</RelativeLayout>