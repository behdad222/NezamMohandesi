<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="btnStyleSeagull" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#626954</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_background_2</item>
        <item name="android:padding">10dip</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="ButtonStyle1" parent="@android:style/Widget.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_background_1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
